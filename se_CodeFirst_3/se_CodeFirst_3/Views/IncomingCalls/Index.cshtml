@{
    ViewBag.Title = "لیست تماس های ورودی";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("افزودن", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="col-sm-7">
    <table class="table table-hover table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td ng-app="incomingCallsApp" ng-controller="incomingCallsCtrl">
                    @Html.ActionLink("تغییر", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>

