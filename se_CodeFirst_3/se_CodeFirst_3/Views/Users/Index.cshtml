@model IEnumerable<se_CodeFirst_3.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("افزودن", "Create", null, new { @class = "btn btn-primary"})
</p>
<div class="col-sm-7">
    <table class="table table-hover table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbsentDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Benefits)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbsentDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OverTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Benefits)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.PasswordHash)
                </td>*@
                <td>
                    @Html.ActionLink("تغییر", "Edit", new { id = item.Id }, new { @class = "btn btn-warning"}) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>